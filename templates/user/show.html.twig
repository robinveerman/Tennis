{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    <hr>
    <table class="table">
        <tbody>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ user.enabled ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>LastLogin</th>
            <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>
    <br>
    <a class="btn btn-primary" href="{{ path('user_index') }}">Terug</a>
    <br>
    <br>
    <a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}">Bewerken</a>
    <br>
    <br>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
